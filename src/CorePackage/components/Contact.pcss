.listItem {
    display: grid;
    grid-template-columns: auto 1fr;
    grid-gap: rem(16);
    padding: rem(8);
    align-items: center;
    border-bottom: rem(1) solid var(--color-border);
}

.listItem:last-child {
    border-bottom: none;
}

.iconContainer {
    height: rem(16);
    width: rem(16);
}
