@import 'fonts.pcss';

:root {
    --background-color: #18141a;

    --accent-color: #ffae39;
    --accent-active-color: #b27a28;

    --text-on-accent-color: #000000;
    --text-color: #ffffff;
}

html {
    font-size: 62.5%;
}

body {
    margin: 0;
    font-family: 'Roboto', sans-serif;
    font-size: 1.6rem;

    background-color: var(--background-color);
    color: var(--text-color);
}

* {
    box-sizing: border-box;
}

h1 {
    margin: 0;
    font-size: 4.8rem;
    font-weight: 700;
}

p {
    margin: 0;
}
