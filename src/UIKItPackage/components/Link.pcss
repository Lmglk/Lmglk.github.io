.link {
    position: relative;
    color: var(--text-color);
    text-decoration: none;
    transition: color 0.2s ease;

    background: none;
    border: none;
    padding: 0;
}

.link:hover {
    color: var(--accent-color);
}

.link:focus-visible {
    outline: 0.1rem solid var(--accent-color);
}
