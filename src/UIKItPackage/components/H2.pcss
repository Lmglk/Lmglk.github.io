.heading {
    position: relative;
    font-weight: 400;
    font-size: 3.6rem;
    padding-left: 4.2rem;
    margin: 0 0 6rem 0;
}

.heading::before {
    content: '';
    position: absolute;
    top: 0.6rem;
    left: 0;
    display: block;
    height: 3rem;
    width: 3rem;
    background-color: var(--accent-color);
    border-radius: 0.4rem;
}
